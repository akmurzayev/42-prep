#include "libft.h"

int	ft_countlen(int n)
{
	int	len;

	len = 0;
	if (n == 0)
		return (1);
	if (n < 0)
		n = -n;
	while (n > 0)
	{
		n /= 10;
		len++;
	}
	return (len);
}

char	*ft_itoa(int n)
{
	int		i;
	int		j;
	int		bas;
	char	*count;

	j = 0;
	bas = ft_countlen(n);
	if (n == 0)
	{
		count = malloc(2);
		if (!count)
			return (NULL);
		count[0] = '0';
		count[1] = '\0';
		return (count);
	}
	if (n < 0)
	{
		j = 1;
		n *= -1;
	}
	count = malloc((bas + j + 1) * sizeof(char));
	if (!count)
		return (NULL);
	i = (bas + j) - 1;
	while (i >= j)
	{
		count[i] = '0' + (n % 10);
		n /= 10;
		i--;
	}
	if (j == 1)
		count[0] = '-';
	count[bas + j] = '\0';
	return (count);
}
